<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State saat item menu sedang dalam keadaan di-hover -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Warna latar belakang saat hover (merah) -->
        </shape>
    </item>
    <!-- Default state (tidak di-hover) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Warna latar belakang default (transparan) -->
        </shape>
    </item>
</selector>
